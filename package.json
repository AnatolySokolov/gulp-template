{
  "name": "gulp-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=development gulp start",
    "build": "cross-env NODE_ENV=production gulp build",
    "prepare": "husky install",
    "eslint": "eslint src/scripts{/*.js,/**/*.js} --cache",
    "eslint:fix": "eslint src/scripts{/*.js,/**/*.js} --cache --fix",
    "stylelint": "stylelint src/styles{/*.scss,/**/*.scss} --syntax scss --cache",
    "stylelint:fix": "stylelint src/styles{/*.scss,/**/*.scss} --syntax scss --cache --fix",
    "test": "npm run eslint && npm run stylelint"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.7",
    "browser-sync": "^2.27.7",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-cheerio": "^1.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-dart-sass": "^1.0.2",
    "gulp-flatten": "^0.4.0",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^8.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^4.0.1",
    "gulp.spritesmith": "^6.12.1",
    "husky": "^7.0.4",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^10.0.1",
    "lint-staged": "^12.3.7",
    "normalize.css": "^8.0.1",
    "prettier": "^2.6.0",
    "stylelint": "^13.13.1",
    "stylelint-config-htmlacademy": "^0.1.12"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.scss": "stylelint --cache --fix",
    "*.{js,scss,md}": "prettier --write"
  }
}
